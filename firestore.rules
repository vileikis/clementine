rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null && !request.auth.token.isAnonymous;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // MediaAsset rules (013-event-settings-overlays)
    // Authentication-based access control - data validation in Zod schemas
    match /workspaces/{workspaceId}/mediaAssets/{assetId} {
      // Authenticated users can read media assets
      allow read: if isAuthenticated();

      // Only admins can create media assets
      allow create: if isAdmin();

      // Only admins can update (soft delete)
      allow update: if isAdmin();

      // No deletes - handled by Admin SDK scheduled jobs
      allow delete: if false;
    }

    // Add other collection rules here as needed
  }
}
