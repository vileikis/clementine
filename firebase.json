{
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase/storage.rules"
  },
  "functions": [
    {
      "source": "functions/isolate",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git"
      ],
      "predeploy": [
        "cd functions && pnpm build && npx isolate && cp -f .env.clementine-7568d isolate/ 2>/dev/null || true && cd isolate && npm install"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "functions": {
      "port": 5003
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "apphosting": {
    "backendId": "clementine-be",
    "rootDir": "/apps/clementine-app",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  }
}
