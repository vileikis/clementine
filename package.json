{
  "name": "clementine",
  "version": "0.1.0",
  "description": "Clementine - the digital AI photobooth",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @clementine/app dev",
    "build": "pnpm --filter @clementine/app build",
    "start": "pnpm --filter @clementine/app start",
    "lint": "pnpm --filter @clementine/app lint",
    "type-check": "pnpm --filter @clementine/app type-check",
    "format": "pnpm --filter @clementine/app format",
    "check": "pnpm --filter @clementine/app check",
    "test": "pnpm --filter @clementine/app test",
    "fb:deploy": "firebase deploy",
    "fb:deploy:rules": "firebase deploy --only firestore:rules,storage",
    "fb:deploy:indexes": "firebase deploy --only firestore:indexes",
    "functions:build": "pnpm --filter @clementine/shared build && pnpm --filter @clementine/functions build",
    "functions:seed": "pnpm --filter @clementine/functions seed",
    "functions:serve": "pnpm --filter @clementine/functions serve",
    "functions:serve:prod": "pnpm --filter @clementine/functions serve:prod",
    "functions:deploy": "./functions/scripts/deploy.sh",
    "worktree": "./scripts/new-worktree.sh"
  },
  "keywords": [
    "ai",
    "photobooth",
    "monorepo"
  ],
  "packageManager": "pnpm@10.18.1"
}
