rules_version = '2';

// Firebase Storage Security Rules for Clementine
// Auth System: Admin users have full access, anonymous users can read workspaces

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function: Check if user is admin
    function isAdmin() {
      return request.auth != null
        && request.auth.token.admin == true;
    }

    function isAnyUser() {
      return request.auth != null;
    }

    // Helper function: Check if user is the session creator (via metadata)
    function isSessionCreator() {
      return isAnyUser()
        && request.resource.metadata.createdBy == request.auth.uid;
    }

    // Helper function: Check if user can read session input
    function canReadSessionInput() {
      return isAdmin()
        || (isAnyUser() && resource.metadata.createdBy == request.auth.uid);
    }

    // Session input files (guest photo/video uploads)
    // Only session creators can upload/read their captured media
    match /projects/{projectId}/sessions/{sessionId}/inputs/{fileName} {
      // Only the session creator can upload (verified via metadata.createdBy)
      allow create: if isSessionCreator();

      // Only the session creator or admin can read
      allow read: if canReadSessionInput();

      // No updates or deletes (files are immutable)
      allow update, delete: if false;
    }

    // Media files rules (013-event-settings-overlays)
    // Authentication-based access control - file validation in client code
    match /workspaces/{workspaceId}/media/{fileName} {
      // Authenticated users can read files
      allow read: if isAnyUser();

      // Only admins can upload files
      allow create: if isAdmin();

      // No updates or deletes (files are immutable)
      // Deletes handled by Admin SDK scheduled jobs
      allow update, delete: if false;
    }

    // Workspace storage: Anonymous users can read, admins can read/write
    match /workspaces/{workspaceId}/{allPaths=**} {
      allow read: if isAnyUser(); // Any authenticated user (including anonymous)
      allow write: if isAdmin(); // Only admins can write
    }

    // Test files: Public read access (for development/testing only)
    match /test/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin(); // Only admins can write
    }

    // All other paths: Admins only
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}
