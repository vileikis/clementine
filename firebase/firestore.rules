rules_version = '2';

// Firestore Security Rules for Clementine
// Auth System: Admin users have full access, non-admin rules to be defined later

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Check if user is admin
    function isAdmin() {
      return request.auth != null
        && request.auth.token.admin == true;
    }
    
    function isAuthenticated() {                                                                                                         
      return request.auth != null                                                                                                        
        && request.auth.token.firebase.sign_in_provider != 'anonymous';                                                                  
    }                                                                                                                                    

    function isAnyUser() {
      return request.auth != null;
    }

    // Workspace collection rules
    match /workspaces/{workspaceId} {
      // Admins have full access to workspaces
      allow read, create, update: if isAdmin();

      // Deny hard deletes - use server functions for soft delete
      allow delete: if false;

      // Workspace experiences subcollection
      // Experiences are mutable templates owned by workspaces
      match /experiences/{experienceId} {
        // Admins can read, create, and update experiences
        allow read, create, update: if isAdmin();

        // Deny hard deletes - use soft delete (status='deleted')
        allow delete: if false;
      }
    }

    // Projects collection rules
    match /projects/{projectId} {
      // Admins have full access to workspaces
      allow read, create, update: if isAdmin();

      // READ: Allow all authenticated users to read non-deleted projects
      allow read: if isAnyUser() && resource.data.status != 'deleted';

      // DELETE: Forbidden - use soft delete (status='deleted')
      allow delete: if false;

      // Project events subcollection (simple admin-only checks)
      // Security rules check WHO can access - Zod schemas validate WHAT is valid
      match /events/{eventId} {
        // WRITE: Allow admins only (create, update)
        allow read, create, update: if isAdmin();

        // READ: Allow all authenticated users to read events
        allow read: if isAnyUser();

        // DELETE: Deny hard deletes (soft delete only via update)
        allow delete: if false;
      }

      // Experience releases subcollection
      // Immutable snapshots of experiences created at event publish time
      match /experienceReleases/{releaseId} {
        // Guests can read releases (public)
        allow read: if true;

        // Only admins can create releases (during event publish)
        allow create: if isAdmin();

        // No updates allowed - releases are immutable
        allow update: if false;

        // No deletes allowed
        allow delete: if false;
      }
    }

    // Admin users: Full access to everything
    // Non-admin users: Will be handled later (currently deny all writes, allow reads)
    match /{document=**} {
      allow read: if true; // Allow reads for now (will be restricted per collection later)
      allow write: if isAdmin(); // Only admins can write
    }
  }
}
